<h2>用户列表</h2>
<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>No.</th>
    <th>Name</th>
    <th>sex</th>
    <th>age</th>
    <th colspan="3">Action</th>
  </tr>

  <% @demos.each_with_index do |item, idx| %>
    <tr>
      <td><%= idx + 1 -%></td>
      <td><%= item.name -%></td>
      <td><%= item.sex -%></td>
      <td><%= item.age -%></td>

      <td><%= link_to 'Show', demo_path(item.id) %></td>
      <td><%= link_to 'Edit', edit_demo_path(item) %></td>
      <td>
        <%= link_to('Destroy', item, method: :delete, data: {confirm: 'Are you sure?'}) %>
      </td>
    </tr>
  <% end %>
</table>

<p>
  <a href="<%= new_demo_path -%>" class="btn btn-primary btn-large">新建用户 &raquo;</a>
</p>